{
  "name": "majik-runway",
  "productName": "Majik Runway",
  "description": "Majik Runway is a comprehensive financial runway, cashflow, and burn-rate modeling engine in the Majik system.",
  "version": "1.0.1",
  "license": "MIT",
  "author": "Zelijah",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:renderer": "cd renderer && npx vite",
    "dev:electron": "wait-on http://localhost:5173 && tsc -p electron && npx electron dist-electron/main.js",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "clean": "rimraf renderer/dist dist-electron release",
    "build": "npm run clean && npm run build:renderer && npm run build:electron",
    "build:renderer": "cd renderer && npx vite build",
    "copy-assets": "cpx \"electron/assets/**/*\" dist-electron/assets",
    "build:electron": "tsc -p electron && npm run copy-assets",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cpx": "^1.5.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.18",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.majik.runway",
    "productName": "Majik Runway",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "renderer/dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "win": {
      "target": [
        "nsis",
        "appx",
        "msi"
      ],
      "icon": "build/icon.ico",
      "artifactName": "majik-runway-v${version}-windows-${arch}.${ext}"
    },
    "appx": {
      "applicationId": "MajikRunway",
      "identityName": "Zelijah.MajikRunway",
      "publisher": "CN=65775C45-41C6-4E6B-AB4A-FCD4E092A5E6",
      "publisherDisplayName": "Zelijah"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "artifactName": "majik-runway-v${version}-linux-${arch}.${ext}"
    }
  }
}
